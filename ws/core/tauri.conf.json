{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Panopticum",
  "version": "0.1.0",
  "identifier": "com.panopticum.app",
  "build": {
    "beforeDevCommand": "cd ../ui && pnpm dev",
    "beforeBuildCommand": "cd ../ui && pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Panopticum",
        "width": 1280,
        "height": 800,
        "decorations": false,
        "backgroundColor": "#000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
